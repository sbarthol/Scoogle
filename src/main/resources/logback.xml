<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %green([%thread]) %highlight(%level) %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="utils.HttpServer" level="WARN"/>
    <logger name="actors.SchedulerActor" level="ERROR"/>
    <logger name="utils.HBaseConnection" level="DEBUG"/>
    <logger name="actors.DBActor" level="INFO"/>
    <logger name="com.ning" level="WARN"/>
    <logger name="org.apache" level="WARN"/>
</configuration>